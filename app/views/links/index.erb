<h1> Links </h1>

<ul id = 'links'>
  <% @links.each do |link| %>
  <li>
  	<a href=<%= link.url %>><%= link.title %></a>
		<% link.tags.each do |tag| %>
  		<a href="/tags/<%= tag.name %>"><%= tag.name %></a>
  	<% end %>
  </li>
  <% end %>
</ul>

<form action="/links/new">
  <input type="submit" value="Create Bookmark">
</form>

<form action="/users">
  <input type="submit" value="Create User">
</form>
